<Window x:Class="FileVViewer.TxtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileVViewer"
        mc:Ignorable="d"
        Title="Файл: " Height="480" Width="600" Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer Margin="0">
            <TextBlock x:Name="FileTextBlock" TextWrapping="Wrap" FontSize="14" Margin="10,0,0,0"/>
        </ScrollViewer>

    </Grid>
</Window>
